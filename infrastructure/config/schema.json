{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Studio Infrastructure Configuration Schema",
  "description": "JSON schema for Studio infrastructure configuration validation",
  "type": "object",
  "required": ["infrastructure", "azure", "application", "deployment", "security", "cost_optimization"],
  "properties": {
    "infrastructure": {
      "type": "object",
      "required": ["naming", "locations", "environments"],
      "properties": {
        "naming": {
          "type": "object",
          "required": ["convention", "max_length", "allowed_chars", "separator"],
          "properties": {
            "convention": {
              "type": "string",
              "pattern": "^[a-zA-Z0-9\\-\\{\\}\\s]+$",
              "description": "Naming convention pattern"
            },
            "max_length": {
              "type": "integer",
              "minimum": 1,
              "maximum": 63,
              "description": "Maximum length for resource names"
            },
            "allowed_chars": {
              "type": "string",
              "pattern": "^[a-z0-9\\-]+$",
              "description": "Allowed characters for resource names"
            },
            "separator": {
              "type": "string",
              "maxLength": 1,
              "description": "Character separator for resource names"
            }
          }
        },
        "locations": {
          "type": "object",
          "required": ["primary", "secondary", "backup"],
          "properties": {
            "primary": {
              "type": "string",
              "pattern": "^[a-z0-9]+$",
              "description": "Primary Azure region"
            },
            "secondary": {
              "type": "string",
              "pattern": "^[a-z0-9]+$",
              "description": "Secondary Azure region"
            },
            "backup": {
              "type": "string",
              "pattern": "^[a-z0-9]+$",
              "description": "Backup Azure region"
            }
          }
        },
        "environments": {
          "type": "object",
          "required": ["development", "staging", "production"],
          "properties": {
            "development": {
              "$ref": "#/definitions/environment"
            },
            "staging": {
              "$ref": "#/definitions/environment"
            },
            "production": {
              "$ref": "#/definitions/environment"
            }
          }
        }
      }
    },
    "azure": {
      "type": "object",
      "required": ["subscription", "resource_groups", "networking", "app_service", "cosmos_db", "storage", "container_registry", "key_vault", "ai_foundry", "monitoring"],
      "properties": {
        "subscription": {
          "type": "object",
          "required": ["required_roles", "required_providers"],
          "properties": {
            "required_roles": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": ["Contributor", "Owner", "Reader", "User Access Administrator"]
              },
              "minItems": 1,
              "description": "Required Azure roles for deployment"
            },
            "required_providers": {
              "type": "array",
              "items": {
                "type": "string",
                "pattern": "^Microsoft\\.[A-Za-z]+$"
              },
              "minItems": 1,
              "description": "Required Azure resource providers"
            }
          }
        },
        "resource_groups": {
          "type": "object",
          "required": ["naming", "tags"],
          "properties": {
            "naming": {
              "type": "string",
              "pattern": "^[a-zA-Z0-9\\-\\{\\}\\s]+$",
              "description": "Resource group naming pattern"
            },
            "tags": {
              "type": "object",
              "additionalProperties": {
                "type": "string"
              },
              "description": "Default tags for resource groups"
            }
          }
        },
        "networking": {
          "type": "object",
          "required": ["virtual_network", "network_security_groups"],
          "properties": {
            "virtual_network": {
              "type": "object",
              "required": ["address_space", "subnets"],
              "properties": {
                "address_space": {
                  "type": "string",
                  "pattern": "^([0-9]{1,3}\\.){3}[0-9]{1,3}/[0-9]{1,2}$",
                  "description": "Virtual network address space in CIDR notation"
                },
                "subnets": {
                  "type": "object",
                  "required": ["app_service", "private_endpoints", "databases"],
                  "properties": {
                    "app_service": {
                      "$ref": "#/definitions/subnet"
                    },
                    "private_endpoints": {
                      "$ref": "#/definitions/subnet"
                    },
                    "databases": {
                      "$ref": "#/definitions/subnet"
                    }
                  }
                }
              }
            },
            "network_security_groups": {
              "type": "object",
              "required": ["app_service"],
              "properties": {
                "app_service": {
                  "type": "object",
                  "required": ["rules"],
                  "properties": {
                    "rules": {
                      "type": "array",
                      "items": {
                        "$ref": "#/definitions/nsg_rule"
                      },
                      "minItems": 1,
                      "description": "Network security group rules"
                    }
                  }
                }
              }
            }
          }
        },
        "app_service": {
          "type": "object",
          "required": ["plans", "applications"],
          "properties": {
            "plans": {
              "type": "object",
              "required": ["development", "staging", "production"],
              "properties": {
                "development": {
                  "$ref": "#/definitions/app_service_plan"
                },
                "staging": {
                  "$ref": "#/definitions/app_service_plan"
                },
                "production": {
                  "$ref": "#/definitions/app_service_plan"
                }
              }
            },
            "applications": {
              "type": "object",
              "required": ["frontend", "backend"],
              "properties": {
                "frontend": {
                  "$ref": "#/definitions/app_service_config"
                },
                "backend": {
                  "$ref": "#/definitions/app_service_config"
                }
              }
            }
          }
        },
        "cosmos_db": {
          "type": "object",
          "required": ["postgresql", "mongodb"],
          "properties": {
            "postgresql": {
              "type": "object",
              "required": ["development", "staging", "production"],
              "properties": {
                "development": {
                  "$ref": "#/definitions/cosmos_postgresql_config"
                },
                "staging": {
                  "$ref": "#/definitions/cosmos_postgresql_config"
                },
                "production": {
                  "$ref": "#/definitions/cosmos_postgresql_config"
                }
              }
            },
            "mongodb": {
              "type": "object",
              "required": ["development", "staging", "production"],
              "properties": {
                "development": {
                  "$ref": "#/definitions/cosmos_mongodb_config"
                },
                "staging": {
                  "$ref": "#/definitions/cosmos_mongodb_config"
                },
                "production": {
                  "$ref": "#/definitions/cosmos_mongodb_config"
                }
              }
            }
          }
        },
        "storage": {
          "type": "object",
          "required": ["account", "containers"],
          "properties": {
            "account": {
              "type": "object",
              "required": ["development", "staging", "production"],
              "properties": {
                "development": {
                  "$ref": "#/definitions/storage_account_config"
                },
                "staging": {
                  "$ref": "#/definitions/storage_account_config"
                },
                "production": {
                  "$ref": "#/definitions/storage_account_config"
                }
              }
            },
            "containers": {
              "type": "object",
              "required": ["user_files", "temp_files", "backups"],
              "properties": {
                "user_files": {
                  "$ref": "#/definitions/storage_container_config"
                },
                "temp_files": {
                  "$ref": "#/definitions/storage_container_config"
                },
                "backups": {
                  "$ref": "#/definitions/storage_container_config"
                }
              }
            }
          }
        },
        "container_registry": {
          "type": "object",
          "required": ["development", "staging", "production"],
          "properties": {
            "development": {
              "$ref": "#/definitions/container_registry_config"
            },
            "staging": {
              "$ref": "#/definitions/container_registry_config"
            },
            "production": {
              "$ref": "#/definitions/container_registry_config"
            }
          }
        },
        "key_vault": {
          "type": "object",
          "required": ["sku", "soft_delete_retention_days", "purge_protection_enabled", "enable_rbac_authorization", "secrets"],
          "properties": {
            "sku": {
              "type": "string",
              "enum": ["standard", "premium"],
              "description": "Key Vault SKU"
            },
            "soft_delete_retention_days": {
              "type": "integer",
              "minimum": 7,
              "maximum": 90,
              "description": "Soft delete retention period in days"
            },
            "purge_protection_enabled": {
              "type": "boolean",
              "description": "Enable purge protection"
            },
            "enable_rbac_authorization": {
              "type": "boolean",
              "description": "Enable RBAC authorization"
            },
            "secrets": {
              "type": "object",
              "additionalProperties": {
                "$ref": "#/definitions/secret_config"
              },
              "description": "Key Vault secrets configuration"
            }
          }
        },
        "ai_foundry": {
          "type": "object",
          "required": ["openai", "content_safety", "ai_search"],
          "properties": {
            "openai": {
              "type": "object",
              "required": ["sku", "models"],
              "properties": {
                "sku": {
                  "type": "string",
                  "enum": ["S0", "S", "P0", "P1", "P2", "P3"],
                  "description": "Azure OpenAI SKU"
                },
                "models": {
                  "type": "object",
                  "required": ["gpt4", "gpt35", "embedding"],
                  "properties": {
                    "gpt4": {
                      "$ref": "#/definitions/model_config"
                    },
                    "gpt35": {
                      "$ref": "#/definitions/model_config"
                    },
                    "embedding": {
                      "$ref": "#/definitions/model_config"
                    }
                  }
                }
              }
            },
            "content_safety": {
              "type": "object",
              "required": ["enabled", "sku"],
              "properties": {
                "enabled": {
                  "type": "boolean",
                  "description": "Enable Azure Content Safety"
                },
                "sku": {
                  "type": "string",
                  "enum": ["S0", "S", "P0", "P1", "P2", "P3"],
                  "description": "Content Safety SKU"
                }
              }
            },
            "ai_search": {
              "type": "object",
              "required": ["enabled", "sku", "replica_count", "partition_count"],
              "properties": {
                "enabled": {
                  "type": "boolean",
                  "description": "Enable Azure AI Search"
                },
                "sku": {
                  "type": "string",
                  "enum": ["free", "basic", "standard", "standard2", "standard3", "storage_optimized_l1", "storage_optimized_l2"],
                  "description": "AI Search SKU"
                },
                "replica_count": {
                  "type": "integer",
                  "minimum": 1,
                  "maximum": 12,
                  "description": "Number of search replicas"
                },
                "partition_count": {
                  "type": "integer",
                  "minimum": 1,
                  "maximum": 12,
                  "description": "Number of search partitions"
                }
              }
            }
          }
        },
        "monitoring": {
          "type": "object",
          "required": ["log_analytics", "application_insights", "alerts"],
          "properties": {
            "log_analytics": {
              "type": "object",
              "required": ["sku", "retention_days"],
              "properties": {
                "sku": {
                  "type": "string",
                  "enum": ["Free", "PerNode", "PerGB2018", "Standalone", "Standard", "Premium"],
                  "description": "Log Analytics SKU"
                },
                "retention_days": {
                  "type": "integer",
                  "minimum": 30,
                  "maximum": 730,
                  "description": "Log retention period in days"
                }
              }
            },
            "application_insights": {
              "type": "object",
              "required": ["application_type", "workspace_mode"],
              "properties": {
                "application_type": {
                  "type": "string",
                  "enum": ["web", "other", "java", "Store", "ios", "other", "phone", "store", "unknown"],
                  "description": "Application Insights application type"
                },
                "workspace_mode": {
                  "type": "string",
                  "enum": ["workspace-based", "classic"],
                  "description": "Application Insights workspace mode"
                }
              }
            },
            "alerts": {
              "type": "object",
              "required": ["app_service", "database", "cost"],
              "properties": {
                "app_service": {
                  "type": "object",
                  "required": ["cpu_threshold", "memory_threshold"],
                  "properties": {
                    "cpu_threshold": {
                      "type": "integer",
                      "minimum": 1,
                      "maximum": 100,
                      "description": "CPU utilization threshold percentage"
                    },
                    "memory_threshold": {
                      "type": "integer",
                      "minimum": 1,
                      "maximum": 100,
                      "description": "Memory utilization threshold percentage"
                    }
                  }
                },
                "database": {
                  "type": "object",
                  "required": ["connections_threshold"],
                  "properties": {
                    "connections_threshold": {
                      "type": "integer",
                      "minimum": 1,
                      "maximum": 100,
                      "description": "Database connections threshold percentage"
                    }
                  }
                },
                "cost": {
                  "type": "object",
                  "required": ["monthly_budget", "alert_threshold"],
                  "properties": {
                    "monthly_budget": {
                      "type": "number",
                      "minimum": 0,
                      "description": "Monthly budget amount"
                    },
                    "alert_threshold": {
                      "type": "integer",
                      "minimum": 1,
                      "maximum": 100,
                      "description": "Cost alert threshold percentage"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "application": {
      "type": "object",
      "required": ["frontend", "backend"],
      "properties": {
        "frontend": {
          "type": "object",
          "required": ["framework", "node_version", "build_command", "start_command", "environment_variables"],
          "properties": {
            "framework": {
              "type": "string",
              "enum": ["nextjs", "react", "vue", "angular"],
              "description": "Frontend framework"
            },
            "node_version": {
              "type": "string",
              "pattern": "^[0-9]+(\\.[0-9]+)*$",
              "description": "Node.js version"
            },
            "build_command": {
              "type": "string",
              "description": "Build command for the application"
            },
            "start_command": {
              "type": "string",
              "description": "Start command for the application"
            },
            "environment_variables": {
              "type": "object",
              "additionalProperties": {
                "type": "string"
              },
              "description": "Default environment variables"
            }
          }
        },
        "backend": {
          "type": "object",
          "required": ["framework", "python_version", "start_command", "environment_variables"],
          "properties": {
            "framework": {
              "type": "string",
              "enum": ["fastapi", "django", "flask", "express"],
              "description": "Backend framework"
            },
            "python_version": {
              "type": "string",
              "pattern": "^[0-9]+(\\.[0-9]+)*$",
              "description": "Python version"
            },
            "start_command": {
              "type": "string",
              "description": "Start command for the application"
            },
            "environment_variables": {
              "type": "object",
              "additionalProperties": {
                "type": "string"
              },
              "description": "Default environment variables"
            }
          }
        }
      }
    },
    "deployment": {
      "type": "object",
      "required": ["terraform", "scripts"],
      "properties": {
        "terraform": {
          "type": "object",
          "required": ["version", "azure_provider_version", "required_providers"],
          "properties": {
            "version": {
              "type": "string",
              "description": "Required Terraform version"
            },
            "azure_provider_version": {
              "type": "string",
              "description": "Required Azure provider version"
            },
            "required_providers": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "minItems": 1,
              "description": "Required Terraform providers"
            }
          }
        },
        "scripts": {
          "type": "object",
          "required": ["deploy", "validate"],
          "properties": {
            "deploy": {
              "type": "object",
              "required": ["timeout", "retry_attempts", "backoff_delay"],
              "properties": {
                "timeout": {
                  "type": "integer",
                  "minimum": 1,
                  "description": "Deployment timeout in seconds"
                },
                "retry_attempts": {
                  "type": "integer",
                  "minimum": 0,
                  "description": "Number of retry attempts"
                },
                "backoff_delay": {
                  "type": "integer",
                  "minimum": 1,
                  "description": "Backoff delay between retries in seconds"
                }
              }
            },
            "validate": {
              "type": "object",
              "required": ["timeout", "tools"],
              "properties": {
                "timeout": {
                  "type": "integer",
                  "minimum": 1,
                  "description": "Validation timeout in seconds"
                },
                "tools": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "minItems": 1,
                  "description": "Validation tools to use"
                }
              }
            }
          }
        }
      }
    },
    "security": {
      "type": "object",
      "required": ["authentication", "network", "data", "compliance"],
      "properties": {
        "authentication": {
          "type": "object",
          "required": ["provider", "multi_factor", "conditional_access"],
          "properties": {
            "provider": {
              "type": "string",
              "enum": ["azure_ad", "azure_b2c", "custom"],
              "description": "Authentication provider"
            },
            "multi_factor": {
              "type": "boolean",
              "description": "Enable multi-factor authentication"
            },
            "conditional_access": {
              "type": "boolean",
              "description": "Enable conditional access policies"
            }
          }
        },
        "network": {
          "type": "object",
          "required": ["private_endpoints", "network_security_groups", "ddos_protection"],
          "properties": {
            "private_endpoints": {
              "type": "boolean",
              "description": "Enable private endpoints for Azure services"
            },
            "network_security_groups": {
              "type": "boolean",
              "description": "Enable network security groups"
            },
            "ddos_protection": {
              "type": "boolean",
              "description": "Enable DDoS protection"
            }
          }
        },
        "data": {
          "type": "object",
          "required": ["encryption_at_rest", "encryption_in_transit", "customer_managed_keys"],
          "properties": {
            "encryption_at_rest": {
              "type": "boolean",
              "description": "Enable encryption at rest"
            },
            "encryption_in_transit": {
              "type": "boolean",
              "description": "Enable encryption in transit"
            },
            "customer_managed_keys": {
              "type": "boolean",
              "description": "Enable customer-managed encryption keys"
            }
          }
        },
        "compliance": {
          "type": "object",
          "required": ["standards", "audit_logging", "backup_retention"],
          "properties": {
            "standards": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": ["SOC2", "ISO27001", "GDPR", "HIPAA", "PCI-DSS"]
              },
              "minItems": 1,
              "description": "Compliance standards to follow"
            },
            "audit_logging": {
              "type": "boolean",
              "description": "Enable audit logging"
            },
            "backup_retention": {
              "type": "integer",
              "minimum": 1,
              "maximum": 365,
              "description": "Backup retention period in days"
            }
          }
        }
      }
    },
    "cost_optimization": {
      "type": "object",
      "required": ["development", "staging", "production"],
      "properties": {
        "development": {
          "$ref": "#/definitions/cost_config"
        },
        "staging": {
          "$ref": "#/definitions/cost_config"
        },
        "production": {
          "$ref": "#/definitions/cost_config"
        }
      }
    }
  },
  "definitions": {
    "environment": {
      "type": "object",
      "required": ["suffix", "tags"],
      "properties": {
        "suffix": {
          "type": "string",
          "pattern": "^[a-z0-9]+$",
          "description": "Environment suffix"
        },
        "tags": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          },
          "description": "Environment-specific tags"
        }
      }
    },
    "subnet": {
      "type": "object",
      "required": ["name", "address_prefix"],
      "properties": {
        "name": {
          "type": "string",
          "pattern": "^[a-z0-9\\-]+$",
          "description": "Subnet name"
        },
        "address_prefix": {
          "type": "string",
          "pattern": "^([0-9]{1,3}\\.){3}[0-9]{1,3}/[0-9]{1,2}$",
          "description": "Subnet address prefix in CIDR notation"
        },
        "delegations": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Subnet service delegations"
        }
      }
    },
    "nsg_rule": {
      "type": "object",
      "required": ["name", "priority", "direction", "access", "protocol", "source_port_range", "destination_port_range", "source_address_prefix", "destination_address_prefix"],
      "properties": {
        "name": {
          "type": "string",
          "pattern": "^[a-zA-Z0-9\\-\\_]+$",
          "description": "Rule name"
        },
        "priority": {
          "type": "integer",
          "minimum": 100,
          "maximum": 4096,
          "description": "Rule priority"
        },
        "direction": {
          "type": "string",
          "enum": ["Inbound", "Outbound"],
          "description": "Traffic direction"
        },
        "access": {
          "type": "string",
          "enum": ["Allow", "Deny"],
          "description": "Access control"
        },
        "protocol": {
          "type": "string",
          "enum": ["Tcp", "Udp", "Icmp", "Esp", "Ah", "*"],
          "description": "Network protocol"
        },
        "source_port_range": {
          "type": "string",
          "description": "Source port range"
        },
        "destination_port_range": {
          "type": "string",
          "description": "Destination port range"
        },
        "source_address_prefix": {
          "type": "string",
          "description": "Source address prefix"
        },
        "destination_address_prefix": {
          "type": "string",
          "description": "Destination address prefix"
        }
      }
    },
    "app_service_plan": {
      "type": "object",
      "required": ["sku", "capacity", "auto_scaling"],
      "properties": {
        "sku": {
          "type": "string",
          "enum": ["B1", "B2", "B3", "S1", "S2", "S3", "P1v2", "P2v2", "P3v2", "P1v3", "P2v3", "P3v3"],
          "description": "App Service Plan SKU"
        },
        "capacity": {
          "type": "integer",
          "minimum": 1,
          "maximum": 20,
          "description": "Number of instances"
        },
        "auto_scaling": {
          "type": "boolean",
          "description": "Enable auto-scaling"
        },
        "min_capacity": {
          "type": "integer",
          "minimum": 1,
          "description": "Minimum capacity for auto-scaling"
        },
        "max_capacity": {
          "type": "integer",
          "minimum": 1,
          "description": "Maximum capacity for auto-scaling"
        }
      }
    },
    "app_service_config": {
      "type": "object",
      "required": ["runtime", "always_on", "https_only", "min_tls_version", "ftps_state"],
      "properties": {
        "runtime": {
          "type": "string",
          "description": "Runtime stack"
        },
        "always_on": {
          "type": "boolean",
          "description": "Keep app always on"
        },
        "https_only": {
          "type": "boolean",
          "description": "HTTPS only"
        },
        "min_tls_version": {
          "type": "string",
          "enum": ["1.0", "1.1", "1.2"],
          "description": "Minimum TLS version"
        },
        "ftps_state": {
          "type": "string",
          "enum": ["AllAllowed", "Disabled", "FtpsOnly"],
          "description": "FTP state"
        }
      }
    },
    "cosmos_postgresql_config": {
      "type": "object",
      "required": ["coordinator_vcore_count", "coordinator_storage_quota_mb", "node_count", "enable_high_availability"],
      "properties": {
        "coordinator_vcore_count": {
          "type": "integer",
          "minimum": 2,
          "maximum": 16,
          "description": "Coordinator vCore count"
        },
        "coordinator_storage_quota_mb": {
          "type": "integer",
          "minimum": 32768,
          "maximum": 2097152,
          "description": "Coordinator storage quota in MB"
        },
        "node_count": {
          "type": "integer",
          "minimum": 0,
          "maximum": 20,
          "description": "Number of worker nodes"
        },
        "enable_high_availability": {
          "type": "boolean",
          "description": "Enable high availability"
        }
      }
    },
    "cosmos_mongodb_config": {
      "type": "object",
      "required": ["sku_name", "disk_size_gb", "node_count", "enable_high_availability"],
      "properties": {
        "sku_name": {
          "type": "string",
          "enum": ["M30", "M40", "M50", "M60", "M80"],
          "description": "MongoDB SKU name"
        },
        "disk_size_gb": {
          "type": "integer",
          "minimum": 32,
          "maximum": 2048,
          "description": "Disk size in GB"
        },
        "node_count": {
          "type": "integer",
          "minimum": 1,
          "maximum": 20,
          "description": "Number of nodes"
        },
        "enable_high_availability": {
          "type": "boolean",
          "description": "Enable high availability"
        }
      }
    },
    "storage_account_config": {
      "type": "object",
      "required": ["tier", "replication", "kind"],
      "properties": {
        "tier": {
          "type": "string",
          "enum": ["Standard", "Premium"],
          "description": "Storage account tier"
        },
        "replication": {
          "type": "string",
          "enum": ["LRS", "GRS", "RAGRS", "ZRS", "GZRS", "RAGZRS"],
          "description": "Storage replication type"
        },
        "kind": {
          "type": "string",
          "enum": ["Storage", "StorageV2", "BlobStorage", "FileStorage", "BlockBlobStorage"],
          "description": "Storage account kind"
        }
      }
    },
    "storage_container_config": {
      "type": "object",
      "required": ["name", "access_type", "public_access"],
      "properties": {
        "name": {
          "type": "string",
          "pattern": "^[a-z0-9\\-]+$",
          "description": "Container name"
        },
        "access_type": {
          "type": "string",
          "enum": ["private", "blob", "container"],
          "description": "Container access type"
        },
        "public_access": {
          "type": "boolean",
          "description": "Enable public access"
        }
      }
    },
    "container_registry_config": {
      "type": "object",
      "required": ["sku", "admin_enabled", "georeplication_locations"],
      "properties": {
        "sku": {
          "type": "string",
          "enum": ["Basic", "Standard", "Premium"],
          "description": "Container Registry SKU"
        },
        "admin_enabled": {
          "type": "boolean",
          "description": "Enable admin user"
        },
        "georeplication_locations": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Georeplication locations"
        }
      }
    },
    "secret_config": {
      "type": "object",
      "required": ["name", "description"],
      "properties": {
        "name": {
          "type": "string",
          "pattern": "^[a-z0-9\\-]+$",
          "description": "Secret name"
        },
        "description": {
          "type": "string",
          "description": "Secret description"
        }
      }
    },
    "model_config": {
      "type": "object",
      "required": ["name", "version", "capacity"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Model name"
        },
        "version": {
          "type": "string",
          "description": "Model version"
        },
        "capacity": {
          "type": "integer",
          "minimum": 1,
          "maximum": 1000,
          "description": "Model capacity"
        }
      }
    },
    "cost_config": {
      "type": "object",
      "required": ["estimated_monthly_cost", "auto_shutdown", "reserved_instances"],
      "properties": {
        "estimated_monthly_cost": {
          "type": "number",
          "minimum": 0,
          "description": "Estimated monthly cost"
        },
        "auto_shutdown": {
          "type": "boolean",
          "description": "Enable auto-shutdown"
        },
        "reserved_instances": {
          "type": "boolean",
          "description": "Use reserved instances"
        }
      }
    }
  }
}
