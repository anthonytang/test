{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "types": ["node"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowJs": true,
    "checkJs": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@studio/api": ["packages/api/src"],
      "@studio/api/*": ["packages/api/src/*"],
      "@studio/auth": ["packages/auth/src"],
      "@studio/auth/*": ["packages/auth/src/*"],
      "@studio/core": ["packages/core/src"],
      "@studio/core/*": ["packages/core/src/*"],
      "@studio/storage": ["packages/storage/src"],
      "@studio/storage/*": ["packages/storage/src/*"],
      "@studio/ui": ["packages/ui/src"],
      "@studio/ui/*": ["packages/ui/src/*"],
      "@studio/notifications": ["packages/notifications/src"],
      "@studio/notifications/*": ["packages/notifications/src/*"],
      "@studio/projects": ["packages/projects/src"],
      "@studio/projects/*": ["packages/projects/src/*"],
      "@studio/results": ["packages/results/src"],
      "@studio/results/*": ["packages/results/src/*"],
      "@studio/templates": ["packages/templates/src"],
      "@studio/templates/*": ["packages/templates/src/*"]
    },
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.test.tsx"]
}
